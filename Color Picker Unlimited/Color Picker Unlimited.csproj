<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>Color_Picker_Unlimited</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>color-picker-icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Page Remove="DarkTheme.xaml" />
    <Page Remove="LightTheme.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="color-picker-icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="DarkTheme.xaml" />
    <Resource Include="LightTheme.xaml" />
  </ItemGroup>

</Project>
