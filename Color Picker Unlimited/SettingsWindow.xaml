<Window x:Class="Color_Picker_Unlimited.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Color_Picker_Unlimited"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="200" Width="300">
    <Grid>
        <Label Content="Settings" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ThemeComboBox" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ThemeComboBox_SelectionChanged">
            <ComboBoxItem IsSelected="True">Light</ComboBoxItem>
            <ComboBoxItem>Dark</ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
